{
  "name": "clean-node-api",
  "version": "1.1.1",
  "description": "Nodejs Rest API using TDD, Clean Architecture and Typescript",
  "scripts": {
    "start": "node dist/main/server.js",
    "up": "npm run build && docker-compose up --build -d",
    "down": "docker-compose down",
    "build": "rimraf dist && npx tsc",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "test": "npx jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "npx jest --passWithNoTests",
    "test:unit": "npm test -- --watch --config jest-unit-config.js",
    "test:integration": "npm test -- --watch --config jest-integration-config.js",
    "test:staged": "npm test -- --detectOpenHandles",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "author": "Matheus Martins",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "is-ci": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.12.1",
    "nodemon": "^2.0.20",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "18.x"
  }
}
